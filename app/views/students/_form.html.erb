<%= form_with model: @student do |f| %>
    <p>
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, placeholder: "Enter you full name" %>
    </p>

    <p>
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, placeholder: "Enter your email adress" %>
    </p>

    <p>
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, placeholder: "Input password" %>
    </p>

    <%= f.submit %>

<% end %>

<%= link_to "cancel", courses_path %>